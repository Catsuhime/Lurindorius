<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/black"
        android:textColorHint="#c0c0c0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter number of documents for each type:"
            android:textSize="18sp"
            android:paddingBottom="16dp"
            android:textColor="@color/black"
            android:textColorHint="#c0c0c0"/>

        <!-- Table Header -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:paddingBottom="16dp">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document Type"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price per doc (€)"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Documents (input)"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>
            </TableRow>

            <!-- Rows for each document type -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoices Received"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <EditText
                    android:id="@+id/invoicesReceivedInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoices Issued"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <EditText
                    android:id="@+id/invoicesIssuedInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank Documents"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <EditText
                    android:id="@+id/bankDocumentsInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash Register Docs"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <EditText
                    android:id="@+id/cashRegisterDocsInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advance Payments"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <EditText
                    android:id="@+id/advancePaymentsInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fixed Assets"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <EditText
                    android:id="@+id/fixedAssetsInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author Contracts"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <EditText
                    android:id="@+id/authorContractsInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transport Means"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <EditText
                    android:id="@+id/transportMeansInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local Business Trips"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <EditText
                    android:id="@+id/localBusinessTripsInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="International Business Trips"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <EditText
                    android:id="@+id/internationalBusinessTripsInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payroll Operations"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>

                <EditText
                    android:id="@+id/payrollOperationsInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:textColorHint="#c0c0c0"/>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate Price"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price: €0"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:textColorHint="#c0c0c0"/>
    </LinearLayout>
</ScrollView>




